#include "fillit.h"

int		doesitfit(char **map, char **mapori, int mapsize, t_piece *piece)
{
	char	**maphead;
	char	*mapchar;
	char	**piecehead;
	char	*piecechar;

	maphead = map;
	piecehead = piece->data;
	if ((maphead - mapori + fheight(piece->data, piece->abc) > mapsize) || ((maphead - mapori) > mapsize))
		return (0);
	while (*maphead && *piecehead)
	{
		mapchar = *maphead;
		piecechar = *piecehead;
		if (*maphead - mapchar + fwidth(piece->data, piece->abc) > mapsize  ((*maphead - mapchar) > mapsize))
			return (0);
		while (*mapchar && *piecechar)
		{
			if (ft_isalpha(*mapchar) && *piecechar == piece->abc)
				return (0);
			mapchar++;
			piecechar++;
		}
		maphead++;
		piecehead++;
	}
	return (1);
}
